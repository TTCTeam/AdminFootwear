<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="list-group">
          <a href="/" class="list-group-item active main-color-bg">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
          </a>
          <a style="background-color: darkgrey;" href="/products" class="list-group-item"><span
              class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Products <span class="badge">12</span></a>
          <a href="/accounts" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            Accounts <span class="badge">203</span></a>
        </div>
        <form action="/products">
          <div class="border mb-1">
            <h3>Brand</h3>
            <ul>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="brand" value="NIKE" onchange="this.form.submit()">
                  <span>Nike</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="brand" value="ADIDAS" onchange="this.form.submit()">
                  <span>Adidas</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="brand" value="MERREL" onchange="this.form.submit()">
                  <span>Merrel</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="brand" value="GUCCI" onchange="this.form.submit()">
                  <span>Gucci</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="brand" value="SKECHERS" onchange="this.form.submit()">
                  <span>Skechers</span>
                </label>
              </li>

            </ul>
          </div>
        
          <div class="border mb-1">
            <h3>Style</h3>
            <ul>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="style" value="slip-on" onchange="this.form.submit()">
                  <span>Slip Ons</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="style" value="boot" onchange="this.form.submit()">
                  <span>Boots</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="style" value="sandal" onchange="this.form.submit()">
                  <span>Sandals</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="style" value="lace-up" onchange="this.form.submit()">
                  <span>Lace Ups</span>
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" method="POST" name="style" value="oxford" onchange="this.form.submit()">
                  <span>Oxfords</span>
                </label>
              </li>

            </ul>
          </div>
        </form>
        <a href="/products">Xoá tất cả</a>
      </div>

      <div class="col-md-9">
        <!-- Website Overview -->
        <div class="panel panel-default">
          <div class="panel-heading main-color-bg">
            <h3 class="panel-title">Products</h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-12">
                <form action="/" class="search-wrap">
                  <div class="form-group">
                    <input method="POST" name="q" type="search" class="form-control search" placeholder="Search"
                      value="">
                  </div>
                </form>
                {{!-- <input method="POSt" class="form-control search" type="search" placeholder="Search Products..." name="q"> --}}
              </div>
            </div>
            <br>
            <table class="table table-striped table-hover">
              <tr>
                <th>Cover</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
              {{#each products }}
              <tr>
                <td>
                  <img src="{{cover_arr}}" class="img-fluid" alt="Image">
                </td>
                <td>{{name}}</td>
                <td>{{brand}}</td>
                <td>{{price}} VND</td>
                <td><a class="btn btn-default" href="products/edit/{{_id}}" method="get">Edit</a></td>
                <td>
                  <form action="products/delete/{{_id}}" method="post">
                    <button class="btn btn-danger" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </table>
            <nav aria-label="Page navigation example" style="float: right;">
              <ul class="pagination justify-content-end">
                {{#paginate pagination type="first"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">First</a></li>
                {{/paginate}}
                {{#paginate pagination type="previous"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Prev</a></li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="7"}}
                <li {{#if active}}class="active" {{/if}}><a href="?page={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Next</a></li>
                {{/paginate}}
                {{#paginate pagination type="last"}}
                <li {{#if disabled}}class="disabled" {{/if}}><a href="?page={{n}}">Last</a></li>
                {{/paginate}}
              </ul>
            </nav>
          </div>

        </div>

      </div>
    </div>

  </div>
</section>

<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center"> Admin Area <small>Account Change Password</small></h1>
            </div>
        </div>
    </div>
</header>

<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form onsubmit="return checkValidPassword_Retype()" method="POST" class="well">
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="" oninput="clearError()"
                            required>
                            <div id="password-info" class="error">{{message}}</div>
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder=""
                            required>
                    </div>
                    <div class="form-group">
                        <label>Retype Password</label>
                        <input type="password" class="form-control" id="retypepassword" name="retypepassword"
                            placeholder="" required>
                    </div>
                    <div class="error" id="notif" style="margin-bottom: 5px;"></div>
                    <button type="submit" class="btn btn-default btn-block">Change password</button>
                </form>
            </div>
        </div>
    </div>
</section>

<footer id="footer">
